---
interface Props {
	title: string;
}
const { title } = Astro.props;
import Navbar from '../components/Navbar.astro';
import Header from '../components/Header.astro';
import Info from '../components/Info.astro'
import Areas from '../components/Areas.astro';
import {Component} from '../components/Carousel.jsx'
import {Componentt} from '../components/Carousel2.jsx'
import {Componente} from '../components/Carousel3.jsx'
import Galeria from '../components/galeria.astro';
---

<!doctype html>
<html lang="es" class=" bg-secundario text-principal">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<main>
			<Header />
			<Info />
			<Areas />
			<div id="progra"><Component client:load/></div>
			<div id="tecnicas"><Componentt client:load/></div>
			<Componente client:load/>
			<Galeria/>
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: "Tanker",system-ui, sans-serif;
	}
	@font-face {
		font-family: "Tanker";
		src: url(/public/fonts/Tanker-Regular.woff2) format('woff2');
	}
	@keyframes show {
		from{
			opacity: 0; scale:10%
		}
		to{
			opacity: 1; scale: 100%;
		}
	}
</style>
